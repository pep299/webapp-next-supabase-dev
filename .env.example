# ==============================================
# Supabase Configuration
# ==============================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321

# Supabase Anonymous Key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service Role Key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==============================================
# Database Configuration
# ==============================================

# PostgreSQL Database URL for Drizzle ORM
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# ==============================================
# Development Configuration
# ==============================================

# Node environment
NODE_ENV=development

# Next.js
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# Local Supabase Configuration
# ==============================================

# These values will be set automatically when running `supabase start`
# You can find them in the terminal output after starting Supabase locally

# JWT Secret (for token verification)
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Database password
SUPABASE_DB_PASSWORD=postgres